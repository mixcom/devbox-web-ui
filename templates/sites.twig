{% include 'header.twig' %}
{% include 'sidebar.twig' with {activePage: "sites"} %}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Sites
            <small>All sites</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Sites</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <table class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Title</th>
                                <th>Link</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for site in sites %}
                                <tr>
                                    <td>{{ site.name }}</td>
                                    <td><a href="{{ site.link }}" target="_blank">{{ site.folder }}</a></td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->

{% include 'footer.twig' %}